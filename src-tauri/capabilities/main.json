{
  "$schema": "https://schema.tauri.app/capabilities.json",
  "identifier": "main",
  "description": "Allow core APIs and SQL plugin for the main window in dev and prod",
  "windows": ["main"],
  "urls": [
    "http://localhost:1420/*",
    "tauri://localhost/*"
  ],
  "permissions": [
    "core:default",
    "core:path:default",
    "dialog:default",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "opener:default",
    "opener:allow-open-url",
    "opener:allow-open-path",
    "clipboard-manager:default",
    "clipboard-manager:allow-write-text",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select"
  ]
}

