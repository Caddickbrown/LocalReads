{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "app.localreads",
  "productName": "LocalReads",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "LocalReads",
        "fullscreen": false,
        "resizable": true,
        "width": 1200,
        "height": 800
      }
    ]
  },
  "bundle": {
    "active": true
  },
  "plugins": {
    "sql": {
      "default": {
        "db-name": "localreads.sqlite",
        "path": "App",
        "load": true
      }
    }
  }
}